@model Endpoint.Site.Controllers.ExcelController

@{
    ViewData["Title"] = "Upload Excel File";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form method="post" action="/Excel/UploadFile" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="file" class="font-weight-bold">Choose Excel File:</label>
                            <input type="file" class="form-control-file" id="file" name="file">
                        </div>
                        <button type="submit" class="btn btn-success btn-block">Upload</button>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a href="/Excel/DisplayData" class="btn btn-secondary">View Data</a>
                </div>
            </div>
        </div>
    </div>
</div>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>