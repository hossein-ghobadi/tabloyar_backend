<!-- Tables -->
<div id="materialsTable" class="table-container shadow-lg p-3 mb-5 bg-white rounded" style="display: block;">
    <h3 class="text-center text-primary">Materials</h3>
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped table-light">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Material Name</th>
                    <th>Quality Factor</th>
                    <th>Material Color</th>
                    <th>Material Thickness</th>
                    <th>Material Size X</th>
                    <th>Material Size Y</th>
                    <th>Material Fee</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var material in Model.Materials)
                {
                    <tr>
                        <td>@material.Id</td>
                        <td>@material.MaterialName</td>
                        <td>@material.QualityFactor</td>
                        <td>@material.MaterialColor</td>
                        <td>@material.MaterialThickness</td>
                        <td>@material.MaterialSizeX</td>
                        <td>@material.MaterialSizeY</td>
                        <td>@material.MaterialFee</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

