    <button type="button" class="btn btn-primary" onclick="showTable('edgePropertiesTable')">Edge Properties</button>
    <button type="button" class="btn btn-primary" onclick="showTable('crystalsTable')">Crystals</button>
    <button type="button" class="btn btn-primary" onclick="showTable('colorCostsTable')">Color Costs</button>
